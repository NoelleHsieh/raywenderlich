<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_hight">

    <ImageView
        android:id="@+id/teamMemberAvatar"
        android:layout_width="@dimen/list_item_hight"
        android:layout_height="@dimen/list_item_hight"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/contendDescription_teamMemberAvatar"/>

    <TextView
        android:id="@+id/teamMemberLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_standard"
        android:paddingEnd="@dimen/padding_standard"
        android:textSize="@dimen/login_text_size"
        android:layout_toEndOf="@id/teamMemberAvatar"
        android:layout_centerVertical="true"
        tools:text="login" />

    <TextView
        android:id="@+id/teamMemberType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/teamMemberLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginEnd="@dimen/padding_standard"
        android:textSize="@dimen/type_text_size"
        android:layout_alignBaseline="@id/teamMemberLogin"
        android:gravity="end"
        tools:text="login" />


</RelativeLayout> 